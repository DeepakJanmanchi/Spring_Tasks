<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- A simple bean definition -->
    <bean id = "actor" class = "com.stackroute.domain.Actor">
        <!-- collaborators and configuration for this bean go here -->
        <property name="age" value="22" />
        <property name="gender" value="Male" />
        <property name="name" value="Deepak"/>
    </bean>
    <bean id = "movie" class = "com.stackroute.domain.Movie">
        <!-- collaborators and configuration for this bean go here -->
        <property name="movieName" value="Pichekistha" />
        <property name="actorName" value="Deepak" />

    </bean>



</beans>